{
  "name": "Modern C++ TDD Development",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "dev-cpp",
  "workspaceFolder": "/home/${localEnv:USER}/workspace",
  "initializeCommand": "bash setEnv.sh",
  "shutdownAction": "stopCompose",
  "updateRemoteUserUID": false,
  "containerEnv": {
    "CC": "/usr/bin/gcc-14",
    "CXX": "/usr/bin/g++-14",
    "PATH": "/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin"
  },
  "features": {},
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": false, 
        "editor.rulers": [80],
        "cmake.configureOnOpen": true,
        "cmake.generator": "Ninja",
        "cmake.cmakePath": "/usr/bin/cmake",
        "C_Cpp.default.compilerPath": "/usr/bin/g++-14",
        "cmake.configureSettings": {
          "CMAKE_C_COMPILER": "/usr/bin/gcc-14",
          "CMAKE_CXX_COMPILER": "/usr/bin/g++-14"
        },
        "clangd.path": "/usr/bin/clangd-19",
        "clangd.arguments": [
          "--background-index",
          "--clang-tidy",
          "--completion-style=detailed",
          "--header-insertion=iwyu",
          "--compile-commands-dir=${workspaceFolder}/build"
        ],
        "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
        "testMate.cpp.test.executables": "**/{build,Build,BUILD}/**/*{Test,test,TEST}*",
        "testMate.cpp.log.logpanel": true,
        "testMate.cpp.discovery.loadOnStartup": true,
        "testMate.cpp.test.workingDirectory": "${absDirpath}"
      },
      "extensions": [
        "llvm-vs-code-extensions.vscode-clangd",
        "ms-vscode.cmake-tools",
        "vadimcn.vscode-lldb",
        "matepek.vscode-catch2-test-adapter",
        "alefragnani.bookmarks",
        "xaver.clang-format",
        "streetsidesoftware.code-spell-checker",
        "jbenden.c-cpp-flylint",
        "github.copilot",
        "bierner.markdown-preview-github-styles"
      ]
    }
  }
}
